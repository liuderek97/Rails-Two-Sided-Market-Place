<p id="notice"><%= notice %></p>
      <div class="container">

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Amount</th>
      <th>Content</th>
      <th>Urgency</th>
      <th>Address</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.amount %></td>
        <td><%= job.content %></td>
        <td><%= job.urgency %></td>
        <td><%= job.address %></td>
        <td><%= job.employer_id %></td>
        <td><%= link_to 'Show', job %></td>
        <% if current_profile.id == @proifle.employer_id%>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <%end%>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
</div>