
	<div class="jobs-container valign-wrapper">
			<div class="Jobs-header">
					<div class="container" id="home-text">
						<div class="col" style="color: white" id="background-text">
										<h1>Grapevine Jobs</h1>
										<p>Get started today find all available jobs now on Grapevine </p>
						</div>
									<div class="card-action">
										<a href="#jobs">Get Started</a>
									</div>
					</div>
				</div>
	</div>
	<br />
	<div class="container">
	<a name="jobs"></a>
	<h1>Available Jobs</h1>
	<div class="divider"></div><br />
	<div class="row">
		<div class="col s12 m12 l12">
			<%= link_to "My jobs", jobs_path(filter: "my_jobs"), class:"btn" %>
			<%= link_to "Jobs I've bid on", jobs_path(filter: "jobs_ive_bid_on"), class:"btn" %>
			<%= link_to "All", jobs_path, class:"btn" %>
			<%= link_to 'New Job', new_job_path, class:"btn" %>
		</div>
	</div>
	
	<div class="row" id="card-holder" style="padding: 10px">
	<% @jobs.each do |job| %>
			<div class="col s12 m12 l4" id="cards">
	      <div class="card" id="card-group">
					<div class="card-title" style="padding-top: 10px; padding-bottom:10px;"><%= job.title %></div>
					<div class="divider"></div>
				<br/>
	        <div class="card-content" id="card-content" style="padding-bottom: 30px">
							<%= job.amount %>
							<br />
							<%= job.content %>
							<br />
							<br />
	          <%= link_to 'Show', job,  class:"btn"%>
	        </div>
				</div>
			</div>
	<% end %>
</div>
</div>
</div>
