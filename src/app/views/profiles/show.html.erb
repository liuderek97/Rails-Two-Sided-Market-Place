<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @profile.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @profile.bio %>
</p>

<% if @reviews.exists? %>
<h5><%= @profile.name %>'s reviews:</h5>
	<% @reviews.each do |review| %>
  <div class="row">
    <div class="col s12 m3">
      <div class="card-panel purple">
			<span class="white-text">
			<ul>
			  <li>
					<h4><%= review.title %></h4>
				</li>
				<li>
					<h6><%= review.star_rating %>/5</h6>
				</li>
				<li>
					<%= review.content %>
				</li>
				<li>
					- <%= review.reviewer.name %>					
				</li>
			</ul>
	    </span>
	    </div>
	  </div>
	</div>
	<% end %>
	<% if @profile.id != current_user.id %> 
	<%= link_to 'Leave a review', new_review_path(:profile_id => @profile.id) %> | 
	<% end %>
<% else %>
  <p> No reviews yet! </p>
	<% if @profile.id != current_user.id %> 
	<%= link_to 'Leave a review', new_review_path(:profile_id => @profile.id) %> | 
	<% end %>
<% end %>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
</div>
