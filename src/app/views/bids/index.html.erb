<div class="container">

	<h1>Bids</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Job</th>
	      <th>Bartender</th>
	      <th>Amount</th>
	      <th>Approved</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @bids.each do |bid| %>
	      <tr>
	        <td><%= bid.job %></td>
	        <td><%= bid.bartender_id %></td>
	        <td><%= bid.amount %></td>
	        <td><%= bid.approved %></td>
	        <td><%= link_to 'Show', bid %></td>
	        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
	        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'New Bid', new_bid_path %>
</div>